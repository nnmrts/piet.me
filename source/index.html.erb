<%= partial(:about, :locals => { :text_class => 'intro-text' }) %>
<hr>

<h2>Latest Posts</h2>
<% blog.articles[0..2].each do |article| %>
<article>
  <h1><%= link_to article.title, article %> </h1>
  <time class="article-meta nudge-up"><%= article.date.strftime('%e %B %Y') %></time>

  <% if article.data.unsplash_img_id %>
    <img class="img-right img-circle" alt="<%= article.title %>" src="<%= cache_remote_asset("https://source.unsplash.com/#{article.data.unsplash_img_id}/300x300") %>" style="min-width: 100px; width: 18vw; max-width: 150px">
  <% end %>

<hr>
<h2>Latest Links</h2>

<ul>
<% data.links[0..4].each do |link| %>
  <li><%= link_to link['description'], link['href'] %></li>
<% end %>
</ul>

<section class="buffer-top-large">
  <h4><%= link_to 'More Links', '/links/' %></h4>
</section>
