<%= partial 'about' %>
<hr>

<h2>Latest Posts</h2>
<% blog.articles[0..2].each do |article| %>
<article>
  <h1><%= link_to article.title, article %> </h1>
  <time><small><%= article.date.strftime('%e %B %Y') %></small></time>

  <% if article.data.unsplash_img_id %>
    <img class="img-right img-circle" alt="<%= article.title %>" src="<%= cache_remote_asset("https://source.unsplash.com/#{article.data.unsplash_img_id}/300x300") %>" style="min-width: 100px; width: 18vw; max-width: 150px">
  <% end %>

  <%= article.summary %>
  <hr>
</article>
<% end %>


<section>
  <a href="/blog/">Archive</a>&nbsp;&nbsp;&nbsp;&nbsp;
  <a href="/feed.xml">RSS</a>
</section>
