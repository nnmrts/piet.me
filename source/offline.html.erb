  padding: 0;
  clear: both;
}
.icon-link {
  display: inline-block;
  margin: 0.5em;
  line-height: 1;
}
.icon-link svg {
  height: 1em;
  width: auto;
  vertical-align: -webkit-baseline-middle;
}
.icon-link svg,
.icon-link a {
  vertical-align: baseline;
}
