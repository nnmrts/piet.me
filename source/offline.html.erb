  color: var(--text-color);
}
a {
  text-decoration: none;
  color: var(--accent-color);
}
a svg {
  height: 1em;
  width: auto;
  vertical-align: middle;
  fill: var(--accent-color);
}
a:hover {
  color: var(--text-color);
}
